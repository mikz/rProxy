<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="schema.rng" type="xml"?>
<actions
    xmlns="urn:x-rProxy:ns:manipulation"
    xmlns:output="urn:x-rProxy:ns:output"
    output:method="plain"
    output:variable="@ical">
    <http method="POST" url="http://www.dpp.cz/prihlaseni/" >
        <fixes>
            <amp/>
        </fixes>
        <cache timeout="300"/>
        <data>
            <param name="login">mikz</param>
            <param name="__postback">f</param>
            <param name="__clicked">btn_login</param>
            <key>password</key><value>mikz</value>
            <key>__event_onclick[btn_login]</key><value>Přihlásit</value>
        </data>
        <find css="div.routes > div a:first-child">
            <clone method="deep"/>
            <save to="routes"/>
        </find>
    </http>
    <create from="CDATA" format="xhtml">
        <![CDATA[
            <link media="screen" type="text/css" rel="stylesheet" href="#{config.stylesheet}" />
        ]]>
        <insert>
            <before css="html head base"/>
        </insert>
    </create>
    <find css='div#head'>
        <call method="test_call"/>
        <call>
            puts 'TEST TEST TEST TESTS TESTER'
        </call>
        <remove/>
    </find>
    <find css='input'>
        <remove/>
        <clone method="deep"/>
        <save to="inputs"/>
    </find>
    <load from="inputs">
        <insert>
            <after css="#obsah"/>
        </insert>
    </load>
    <find  xpath='//*[@id="txtTime"]'>
        <remove/>
        <clone method="deep"/>
        <save to="txtTime"/>
    </find>
    <load from="txtTime">
        <remove attribute="value"/>
        <insert>
            <before xpath="//xmlns:p[@class='cas']"/>
        </insert>
        <!--<log vars="method self"/>-->
    </load>
    <load from="routes">
        <insert>
            <after css="#pole > h1"/>
        </insert>
    </load>
    <find css='#pole > p.desc, #foot'>
        <remove/>
    </find>
</actions>